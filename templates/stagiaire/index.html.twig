{% extends 'base.html.twig' %}

{% block title %}Lite des stagiaires{% endblock %}

{% block body %}
    <main class="container p-3">
        <h1 class="display-5 fw-bold text-body-emphasis mb-5">Liste des stagiaires :</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Ville</th>
                    <th>Inscrit à la session</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for stagiaire in stagiaires %}
                    <tr>
                        <td>{{ stagiaire.nom }}</td>
                        <td>{{ stagiaire.prenom }}</td>
                        <td>{{ stagiaire.ville }}</td>
                        <td>{{ stagiaire.currentSession }}</td>
                        <td><a href="{{ path('edit_stagiaire', {'id': stagiaire.id}) }}"><i class="fa-solid fa-circle-info" style="font-size: 150%;"></i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table class="table">
    </main>
    
{% endblock %}
